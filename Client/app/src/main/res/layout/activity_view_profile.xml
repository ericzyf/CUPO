<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/viewEmail_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/viewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@+id/viewEmail_"
            app:layout_constraintTop_toBottomOf="@+id/viewEmail_" />

        <TextView
            android:id="@+id/viewUsername_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Username"
            app:layout_constraintStart_toStartOf="@+id/viewEmail_"
            app:layout_constraintTop_toBottomOf="@+id/viewEmail" />

        <TextView
            android:id="@+id/viewUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@+id/viewEmail_"
            app:layout_constraintTop_toBottomOf="@+id/viewUsername_" />

        <TextView
            android:id="@+id/viewTimestamp_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Joined since"
            app:layout_constraintStart_toStartOf="@+id/viewEmail_"
            app:layout_constraintTop_toBottomOf="@+id/viewUsername" />

        <TextView
            android:id="@+id/viewTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@+id/viewEmail_"
            app:layout_constraintTop_toBottomOf="@+id/viewTimestamp_" />

        <TextView
            android:id="@+id/viewGender_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Gender"
            app:layout_constraintStart_toStartOf="@+id/viewEmail_"
            app:layout_constraintTop_toBottomOf="@+id/viewTimestamp" />

        <TextView
            android:id="@+id/viewGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@+id/viewEmail_"
            app:layout_constraintTop_toBottomOf="@+id/viewGender_" />

        <TextView
            android:id="@+id/viewPhone_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Phone"
            app:layout_constraintStart_toStartOf="@+id/viewEmail_"
            app:layout_constraintTop_toBottomOf="@+id/viewGender" />

        <TextView
            android:id="@+id/viewPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@+id/viewEmail_"
            app:layout_constraintTop_toBottomOf="@+id/viewPhone_" />

        <TextView
            android:id="@+id/viewBio_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Bio"
            app:layout_constraintStart_toStartOf="@+id/viewEmail_"
            app:layout_constraintTop_toBottomOf="@+id/viewPhone" />

        <TextView
            android:id="@+id/viewBio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@+id/viewEmail_"
            app:layout_constraintTop_toBottomOf="@+id/viewBio_" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>